<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Flight Number:</strong>
    BA <%= @flight.id %>
  </p>

<p>
  <strong>Origin:</strong>
  <%= @flight.origin %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @flight.destination %>
</p>

<p>
  <strong>Date:</strong>
  <%= @flight.date.strftime "%B %-d, %-l.%M%P" %>
</p>

<p>
  <strong>Plane:</strong>
  <%= @flight.plane.id %>
</p>

<%= link_to 'Edit', edit_flight_path(@flight) %> |
<%= link_to 'Back', flights_path %>
</div>
