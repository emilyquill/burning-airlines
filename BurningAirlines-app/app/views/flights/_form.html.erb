<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :origin %><br>
    <%= f.text_field :origin, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :destination %><br>
    <%= f.text_field :destination, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :plane_id %><br>
    <%= f.collection_select(:plane_id, Plane.all, :id, :name, {:prompt => 'Select a plane'} )  %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-success', :method => 'get'  %>
  </div>
<% end %>
