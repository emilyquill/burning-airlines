<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Planes</h1>

<table class="table table-inverse">
  <thead>
    <tr>
      <th>Name</th>
      <th>Columns</th>
      <th>Rows</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planes.each do |plane| %>
      <tr>
        <td><%= plane.name %></td>
        <td><%= plane.columns %></td>
        <td><%= plane.rows %></td>
        <td><%= link_to 'Show', plane %></td>
        <td><%= link_to 'Edit', edit_plane_path(plane) %></td>
        <td><%= link_to 'Destroy', plane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Plane', new_plane_path, :class => 'btn btn-success' %>

