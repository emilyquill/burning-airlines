<div class="container">
<p id="notice"><%= notice %></p>

<h1>All Reservations</h1>

<table class="table table-inverse">
  <thead>
    <tr>
      <th>User</th>
      <th>Flight</th>
      <th>Column</th>
      <th>Row</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.name %></td>
        <td>BA <%= reservation.flight.id %></td>
        <td><%= reservation.column %></td>
        <td><%= reservation.row %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <% if @reservations.length == 0 %>
    <td colspan="7"> No reservations </td>
     <% end %>
  </tbody>
</table>

<br>
</div>
